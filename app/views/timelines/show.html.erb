<p id="notice"><%= notice %></p>

<h1> <%= @timeline.title %> </h1>
<div class="center" style="border-bottom: 1px solid #e8e8e8"> <%= @timeline.description %> </div>
<div style="overflow: auto; width: 475px; float:left; height: 450px;">
<% if current_user.id == @timeline.user_id %>
<% @timeline.categories.each do |category| %>
  <div class="column">
  <span class = "<%= category.title %>">
    <h3> <%= link_to category.title, edit_category_path(category) %> </h3>
  </span>
    <% category.events.each do |event| %>
      <div class = "event"> <%= event.title %> </div>
    <% end %>
  </div>
<% end %> 
<% else %>
<% @timeline.categories.each do |category| %>
  <div class="column">
    <span class = "<%= category.title %>"> <%= category.title %> </span>
  </div>
<% end %> 
<% end %>

<div style="width: 5px; height:100%; background-color: red; position: relative; left: 25px; top: 20px; float: left;"></div>
</div>
<div id="map_canvas" style="width:450px; height:450px; position: relative; left: 10px; top: 20px"></div>
<br />
<div class="center">
<% if current_user.id == @timeline.user_id %>
<%= link_to 'Edit', edit_timeline_path(@timeline) %> |
<% end %>
<%= link_to 'Back', timelines_path %>
</div>
